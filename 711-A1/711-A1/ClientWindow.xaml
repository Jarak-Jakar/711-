<Window x:Class="_711_A1.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_711_A1"
        mc:Ignorable="d"
        Title="Client" Height="307.719" Width="339.43">
    <DockPanel>

        <WrapPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom">
            <Button x:Name="RefreshButton" Content="Refresh File List" HorizontalAlignment="Left" VerticalAlignment="Top" Click="RefreshButton_Click"/>
            <Button x:Name="DownloadButton" Content="Download Selected File" HorizontalAlignment="Left" VerticalAlignment="Top" Click="DownloadButton_Click"/>
            <Button x:Name="openFileButton" Content="Open Selected File" HorizontalAlignment="Left" VerticalAlignment="Top" Click="DisplayButton_Click"/>

        </WrapPanel>
        <ListView x:Name="filesListView" DockPanel.Dock="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </DockPanel>
</Window>
